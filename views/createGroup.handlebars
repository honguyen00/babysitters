<!-- views/createGroup.handlebars -->
<div class="container mt-4">
    <h1>Create Group</h1>
    <form id="createGroupForm">
        <div class="form-group">
            <label for="groupName">Group Name</label>
            <input type="text" class="form-control" id="groupName" name="groupName" required>
        </div>
        <div class="form-group">
            <label for="groupUsers">Add Group Users</label>
            <input type="text" class="form-control" id="groupUsersInput" placeholder="Search Users">
            <ul id="groupUsersList" class="list-group mt-2">
            </ul>
        </div>
        <button type="submit" class="btn btn-primary">Create Group</button>
    </form>
</div>

<script src="/js/createGroup.js"></script>
