<!-- views/profile.handlebars -->
<div class="container mt-4">
    <div class="row">
        <!-- Profile Picture and Points -->
        <div class="col-md-4">
            <img src="{{profilePicture}}" alt="{{first_name}}'s Profile Picture" class="img-fluid rounded-circle">
            <h3>Points: {{points}}</h3>
        </div>

        <!-- User Details -->
        <div class="col-md-8">
            <h1>My Profile</h1>
            <form>
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" class="form-control" value="{{first_name}}" readonly>
                </div>
                <div class="form-group">
                    <label>Family Name</label>
                    <input type="text" class="form-control" value="{{last_name}}" readonly>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" value="{{address_line}}" readonly>
                </div>
                <div class="form-group">
                    <label>Suburb</label>
                    <input type="text" class="form-control" value="{{suburb}}" readonly>
                </div>
                <div class="form-group">
                    <label>Mobile Number</label>
                    <input type="text" class="form-control" value="{{phone_number}}" readonly>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" value="{{email}}" readonly>
                </div>
                <!-- Add more fields for Phone number, Address, etc. -->
                <button type="submit" class="btn btn-warning">Edit...</button>
            </form>
        </div>
    </div>
</div>
