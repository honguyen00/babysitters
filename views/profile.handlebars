<!-- views/profile.handlebars -->
<div class="container mt-4">
    <div class="row">
        <!-- Profile Picture and Points -->
        <div class="col-md-4">
            <img src={{profilePic}} alt="{{first_name}}'s Profile Picture" class="img-fluid">
            <h3>Points: {{points}}</h3>
            <form id="upload-form" action="/upload" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="profilePic">Upload Profile Picture</label>
                    <input type="file" id="profilePic" name="profilePic" class="form-control-file">
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>
        <!-- User Details -->
        <div class="col-md-8">
            <h1>My Profile</h1>
            <form id="profile-form">
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" id="first_name" class="form-control form-input" value="{{first_name}}" readonly>
                </div>
                <div class="form-group">
                    <label>Family Name</label>
                    <input type="text" id="last_name" class="form-control form-input" value="{{last_name}}" readonly>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" id="address_line" class="form-control form-input" value="{{address_line}}" readonly>
                </div>
                <div class="form-group">
                    <label>Suburb</label>
                    <input type="text" id="suburb" class="form-control form-input" value="{{suburb}}" readonly>
                </div>
                <div class="form-group">
                    <label>Mobile Number</label>
                    <input type="text" id="phone_number" class="form-control form-input" value="{{phone_number}}" readonly>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" id="email" class="form-control form-input" value="{{email}}" readonly>
                </div>
                <!-- Add more fields for Phone number, Address, etc. -->
                <button id="edit-profile" class="btn btn-warning">Edit...</button>
               <button id="clear-profile" class="btn btn-secondary">Clear</button>
                <button id="save-profile" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
<script src="/js/profile.js"></script>