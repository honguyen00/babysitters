<!-- views/postEvent.handlebars -->
<div class="container mt-4">
    <h1>Post New Event</h1>
    <form id="eventForm">
        <div class="form-group">
            <label for="eventTitle">Event Title:</label>
            <input type="text" class="form-control" id="eventTitle" required>
        </div>
